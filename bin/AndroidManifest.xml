<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lpf.mysuperdemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 图片类 -->
        <activity
            android:name="com.lpf.mysuperdemo.activity.PictureDemosActivity"
            android:screenOrientation="portrait" />

        <!-- 数据操作类 -->
        <activity
            android:name="com.lpf.mysuperdemo.activity.DataDemosActivity"
            android:screenOrientation="portrait" />

        <!-- 图片轮播 -->
        <activity
            android:name="com.lpf.mysuperdemo.activity.AutoPlayViewPagerActivity"
            android:screenOrientation="portrait" />

        <!-- 公共WebClient类 -->
        <activity
            android:name="com.lpf.mysuperdemo.activity.CommonWebClientActivity"
            android:screenOrientation="portrait" />

        <!-- 请求数据 -->
        <activity
            android:name="com.lpf.mysuperdemo.activity.RequestForDataActivity"
            android:screenOrientation="portrait" />

        <!-- 发送数据 -->
        <activity
            android:name="com.lpf.mysuperdemo.activity.ResponseForDataActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>