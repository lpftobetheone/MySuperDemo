<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lpf.mysuperdemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <!-- 扫描二维码start -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <!-- 扫描二维码end -->

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.lpf.mysuperdemo.activity.TestInterface"
            android:screenOrientation="portrait" />

        <!-- 公共WebClient类 -->
        <activity
            android:name="com.lpf.mysuperdemo.activity.CommonWebClientActivity"
            android:screenOrientation="portrait" />

        <!-- ****************图片类 start**************** -->
        <activity
            android:name="com.lpf.mysuperdemo.activity.PictureDemosActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lpf.mysuperdemo.activity.HorizontalListViewActivity"
            android:screenOrientation="portrait" />

        <!-- 图片轮播 -->
        <activity
            android:name="com.lpf.mysuperdemo.activity.AutoPlayViewPagerActivity"
            android:screenOrientation="portrait" />
        <!-- ****************图片类 end**************** -->


        <!-- ****************数据操作类  start**************** -->
        <!-- 数据操作类 -->
        <activity
            android:name="com.lpf.mysuperdemo.activity.DataDemosActivity"
            android:screenOrientation="portrait" />
        <!-- 请求数据 -->
        <activity
            android:name="com.lpf.mysuperdemo.activity.RequestForDataActivity"
            android:screenOrientation="portrait" />

        <!-- 发送数据 -->
        <activity
            android:name="com.lpf.mysuperdemo.activity.ResponseForDataActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lpf.mysuperdemo.activity.DataFileDownLoadActivity"
            android:screenOrientation="portrait" />
        
        <!-- 数据库操作 -->
        <activity
            android:name="com.lpf.mysuperdemo.activity.DataDbActivity"
            android:screenOrientation="portrait" />
        <!-- ****************数据操作类  end**************** -->


        <!-- ****************网络操作类 start**************** -->
        <!-- 网络监听 -->
        <activity
            android:name="com.lpf.mysuperdemo.activity.NetChangeActivity"
            android:screenOrientation="portrait" />
        <!-- ****************网络操作类 end**************** -->


        <!-- ****************自定义控件start**************** -->


        <!-- 自定义控件DemoList -->
        <activity
            android:name="com.lpf.mysuperdemo.activity.CustomDemosActivity"
            android:screenOrientation="portrait" />
        <!-- 自定义带有删除按钮的editText -->
        <activity
            android:name="com.lpf.mysuperdemo.activity.CustomDeleteEditTextActivity"
            android:screenOrientation="portrait" />

        <!-- 自定义弹出对话框 -->
        <activity
            android:name="com.lpf.mysuperdemo.activity.CustomDialogActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lpf.mysuperdemo.activity.CustomDialogShowActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyDialogTopRight" />
        <activity
            android:name="com.lpf.mysuperdemo.activity.CustomWidgetActivity"
            android:screenOrientation="portrait" />
        
        <!-- ListView结合RatioButton选择 -->
         <activity
            android:name="com.lpf.mysuperdemo.activity.PartnerActivity"
            android:screenOrientation="portrait" />
        <!-- 扫描二维码-->
        <activity
            android:name="com.lpf.mysuperdemo.activity.CaptureActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lpf.mysuperdemo.qrcode.ResultActivity"
            android:screenOrientation="portrait" />

        <!-- ****************自定义控件end**************** -->
        
        <!-- ****************框架布局start**************** -->
         <activity
            android:name="com.lpf.mysuperdemo.activity.FrameDemosActivity"
            android:screenOrientation="portrait" />
         <activity
            android:name="com.lpf.mysuperdemo.activity.FrameSlidingMenuActivity"
            android:screenOrientation="portrait" />
        
        <!-- ****************框架布局end**************** -->


        <!-- 当前测试 -->
        <activity
            android:name="com.lpf.mysuperdemo.activity.Test"
            android:screenOrientation="portrait" />
        
    </application>

</manifest>